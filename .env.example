# Django Settings
DEBUG=True
SECRET_KEY=django-insecure-change-this-in-production-pyq-analyzer-secret-key
ALLOWED_HOSTS=localhost,127.0.0.1

# Database
DATABASE_URL=sqlite:///db/pyq_analyzer.sqlite3

# Gemini API Configuration (Primary LLM - FREE tier available)
GEMINI_API_KEY=your-gemini-api-key-here

# Qwen API Configuration (Alternative LLM)
QWEN_API_KEY=your-huggingface-token-here
QWEN_API_URL=https://dashscope.aliyuncs.com/compatible-mode/v1
QWEN_MODEL=qwen2.5-7b-instruct

# Ollama Configuration (Fallback - Local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2

# OCR Enhancement Settings
OCR_USE_LLM_CLEANING=true
OCR_BATCH_PAGES=true

# Similarity Detection Settings
SIMILARITY_USE_HYBRID=true
SIMILARITY_EMBEDDING_MODEL=multi-qa-MiniLM-L6-cos-v1
SIMILARITY_THRESHOLD_HIGH=0.85
SIMILARITY_THRESHOLD_LOW=0.65

# Media Files
MEDIA_ROOT=media
MEDIA_URL=/media/

# Email (Console backend for development)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
